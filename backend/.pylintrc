[MASTER]
init-hook='import sys; import os; sys.path.insert(0, os.path.dirname(os.path.abspath(__file__)))'
ignore=venv
ignore-paths=venv

[MESSAGES CONTROL]
disable=missing-docstring,import-error

[FORMAT]
max-line-length=120

[DESIGN]
max-args=10
max-locals=20
max-branches=15
max-statements=60

[IMPORTS]
# Add the current directory to the Python path for imports
init-hook='import sys; import os; sys.path.insert(0, os.path.dirname(os.path.abspath(__file__)))'
